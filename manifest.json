{
  "manifest_version": 3,
  "name": "TabOrganizer",
  "version": "1.0.0",
  "description": "Organizes your browser tabs into groups by domain, allowing you to save, favorite, and quickly access them.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "contextMenus",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "fullscreen.html",
        "popup.css",
        "fullscreen.css",
        "icons.js",
        "popup.js",
        "fullscreen.js",
        "selector/picker.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "open-popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Open Tab Organizer Popup"
    },
    "open-fullscreen": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Open Tab Organizer Fullscreen"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ]
}